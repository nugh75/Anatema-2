# File di configurazione dell'ambiente perAnatema
# Copia questo file in .env e modifica i valori secondo le tue necessit√†

# Chiave segreta per Flask (CAMBIA IN PRODUZIONE!)
SECRET_KEY=dev-secret-key-change-in-production-123456789

# URL del database
# Per SQLite (sviluppo): sqlite:///analisi_mu.db
# Per PostgreSQL: postgresql://username:password@localhost/analisi_mu
DATABASE_URL=sqlite:///analisi_mu.db

# Configurazione Flask
FLASK_ENV=development
FLASK_DEBUG=1

# Configurazione upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Configurazione email (opzionale, per future implementazioni)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
